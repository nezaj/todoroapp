<div id="date-info">
My Lists
</div>

<div id="lists-overall-info">
  <span class="glyphicon glyphicon-check"></span>: <%= completedTasks %> <%= completedTasksText %> Done
  <br>
  <span class="glyphicon glyphicon-unchecked"></span>: <%= pendingTasks %> <%= pendingTasksText %> Pending
  <br>
  <span class="glyphicon glyphicon-star"></span>: <%= pomodorosAchieved %> <%= pomodorosText %>
  <br>
</div>

<!-- Add New List Button-->
<center>
  <button type="button" 
          id="show-list-form"
          class="btn btn-danger">Add New List</button>
<!-- Add List Form -->
  <form id="list-form" 
       class="hidden clearfix input-group">
    <input type="text" name="list[title]" id="list-input-field" class="form-control">
    <a class="input-group-addon glyphicon glyphicon-plus"
          id="submit-list-form"></a>
    <a class="input-group-addon glyphicon glyphicon-remove"
          id="remove-list-form"></a>
  </form>
</center>

<!-- render individual lists -->
<ul id="list-items" class="list-group">
</ul>

<!-- Alerts -->
<div id="add-list-alert" class="alert alert-danger" style="display: none;">
  Lists must have a title!
</div>

<div id="remove-list-alert" class="alert alert-danger" style="display: none;">
  Woah there. You should have at least one list!
</div>

