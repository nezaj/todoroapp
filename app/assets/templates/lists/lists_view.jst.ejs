<% var completedTasks = lists.numCompletedTasks() %>
<% var pendingTasks = lists.numPendingTasks() %>
<% var pomodorosAchieved = lists.numPomodorosAchieved() %> 

<% var completedTasksText = (completedTasks === 1) ? "Task" : "Tasks" %>
<% var pendingTasksText = (pendingTasks === 1) ? "Task" : "Tasks" %>
<% var pomodorosText = (pomodorosAchieved === 1) ? "Pomodoro" : "Pomodoros" %>

