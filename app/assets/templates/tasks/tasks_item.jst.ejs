<% var todayStatus = task.get("today") ? "today" : "later" %>
<% var completeStatus = task.get("complete") ? "complete" : "incomplete" %>

<td>
<!-- Checkboxes -->
  <span class="task-<%= completeStatus %>">
    <a href="#" class="task-checked glyphicon glyphicon-check"
                data-id="<%=task.id %>"></a>
    <a href="#" class="task-unchecked glyphicon glyphicon-unchecked"
                data-id="<%=task.id %>"></a>
  </span>

  <!-- Task Title -->
  <span class="task-<%=completeStatus %> task-title">
    <%= task.escape("title") %>
  </span>

  <span class="task-options">
    <% if (viewType === "todayView") { %>
      <!-- Open Timer Window -->
      <a href="#" class="task-open-timer glyphicon glyphicon-dashboard" data-id="<%= task.id %>"></a>
    <% } %>

    <!-- Remove Task -->
    <a href="#" class="list-remove-task glyphicon glyphicon-remove" data-id="<%= task.id %>"></a>

    <!-- doLater/doToday -->
    <span class="<%= todayStatus %>">
      <a href="#" class="list-do-later glyphicon glyphicon-flag" data-id="<%= task.id %>"></a>
      <% if (viewType !== "todayView") { %>
        <a href="#" class="list-do-today glyphicon glyphicon-flag" data-id="<%= task.id %>" style="color: grey"></a>
      <% } %>
    </span>
    <!-- Actual/Expected Pomodoros -->
    <%= task.get("pomodoro_actual")%>/<%= task.get("pomodoro_expected")%>
  </span>
</td>
<!-- Edit Form -->
<td>
  <form id="task-edit" class="input-group" data-id="<%= task.id %>">
    <input type="text" 
           data-id="<%= task.id %>"
           name="task[title]"
           class="task-edit-form form-control hidden"
           value="<%= task.escape('title') %>">
  </form>
</td>

